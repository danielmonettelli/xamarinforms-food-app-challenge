<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="XF_FoodApp.Views.Discover"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:d="http://xamarin.com/schemas/2014/forms/design"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:XF_FoodApp.ViewModels"
    mc:Ignorable="d">

    <ContentPage.BindingContext>
        <vm:MainViewModel />
    </ContentPage.BindingContext>

    <Shell.TitleView>
        <StackLayout
            Padding="0,0,10,0"
            Orientation="Horizontal">
            <Label
                Style="{StaticResource TxtHeadline6_3}"
                Text="Explore restaurants"
                VerticalOptions="CenterAndExpand">
                <Label.HorizontalOptions>
                    <OnPlatform
                        x:TypeArguments="LayoutOptions"
                        Android="StartAndExpand"
                        iOS="EndAndExpand" />
                </Label.HorizontalOptions>
            </Label>

            <Switch
                HorizontalOptions="EndAndExpand"
                IsToggled="{Binding IsBusy}"
                OnColor="Black"
                Toggled="Switch_Toggled"
                VerticalOptions="CenterAndExpand"
                Visual="Material" />

        </StackLayout>
    </Shell.TitleView>

    <ContentPage.Content>
        <Grid>
            <BoxView BackgroundColor="{DynamicResource colBG1}" />
            <ScrollView>
                <Grid
                    RowSpacing="22.5"
                    Style="{StaticResource GridIdealPSpace}">

                    <Grid.RowDefinitions>
                        <RowDefinition Height=".7*" />
                        <RowDefinition Height=".3*" />
                    </Grid.RowDefinitions>

                    <StackLayout
                        Grid.Row="0"
                        Margin="0,32,0,0"
                        Spacing="15">

                        <Label
                            Style="{StaticResource TxtHeadline4_2}"
                            Text="Discovery new places" />

                        <CheckBox
                            CheckedChanged="CheckBox_CheckedChanged"
                            HorizontalOptions="EndAndExpand"
                            IsChecked="{Binding IsBusy}"
                            VerticalOptions="CenterAndExpand"
                            Color="Pink">
                            <CheckBox.IsVisible>
                                <OnPlatform x:TypeArguments="x:Boolean">
                                    <On
                                        Platform="Android, iOS"
                                        Value="False" />
                                    <On
                                        Platform="UWP"
                                        Value="True" />
                                </OnPlatform>
                            </CheckBox.IsVisible>
                        </CheckBox>

                        <CollectionView
                            HeightRequest="345.5"
                            ItemsSource="{Binding ListRestaurant}"
                            SelectionMode="Single">
                            <CollectionView.ItemsLayout>
                                <GridItemsLayout Orientation="Horizontal" />
                            </CollectionView.ItemsLayout>
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Frame
                                        Padding="7.5"
                                        BackgroundColor="transparent"
                                        HasShadow="False">
                                        <Frame
                                            BackgroundColor="{DynamicResource colSurf1}"
                                            CornerRadius="6"
                                            HasShadow="False"
                                            Visual="Material"
                                            WidthRequest="208">
                                            <StackLayout Spacing="6">
                                                <Frame
                                                    CornerRadius="6"
                                                    HasShadow="False"
                                                    Visual="Material">
                                                    <Image
                                                        Aspect="AspectFill"
                                                        HeightRequest="252"
                                                        Source="{Binding Image_Restaurant}" />
                                                </Frame>
                                                <Label
                                                    Margin="0,0,0,2"
                                                    LineBreakMode="TailTruncation"
                                                    Style="{StaticResource TxtTitle_1}"
                                                    Text="{Binding Title_Restaurant}" />
                                                <Label
                                                    LineBreakMode="TailTruncation"
                                                    Style="{StaticResource TxtSubTit2_1}"
                                                    Text="{Binding Place_Restaurant}" />
                                                <StackLayout Orientation="Horizontal">
                                                    <Image
                                                        Margin="0,-4,8.2,0"
                                                        HorizontalOptions="Start"
                                                        Source="{StaticResource icon_star}"
                                                        VerticalOptions="Center" />
                                                    <Label
                                                        Margin="0,0,2,0"
                                                        HorizontalOptions="Start"
                                                        LineBreakMode="TailTruncation"
                                                        Style="{StaticResource TxtSubTit2_2}"
                                                        Text="{Binding Rating1_Restaurant}" />
                                                    <Label
                                                        Margin="0,0,10,0"
                                                        HorizontalOptions="Start"
                                                        LineBreakMode="TailTruncation"
                                                        Style="{StaticResource TxtSubTit2_1}"
                                                        Text="{Binding Rating2_Restaurant}" />

                                                    <Frame
                                                        Margin="0,-4,0,0"
                                                        BackgroundColor="{DynamicResource colPrim}"
                                                        CornerRadius="10"
                                                        HasShadow="False"
                                                        HeightRequest="18"
                                                        HorizontalOptions="EndAndExpand"
                                                        VerticalOptions="Center"
                                                        Visual="Material"
                                                        WidthRequest="78">
                                                        <Label
                                                            HorizontalOptions="Center"
                                                            LineBreakMode="TailTruncation"
                                                            MaxLines="1"
                                                            Style="{StaticResource Button_3}"
                                                            Text="Free delivery"
                                                            VerticalOptions="Center" />
                                                    </Frame>
                                                </StackLayout>
                                            </StackLayout>
                                        </Frame>
                                    </Frame>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </StackLayout>

                    <StackLayout
                        Grid.Row="1"
                        Spacing="16">

                        <StackLayout
                            Padding="0,0,16,0"
                            Orientation="Horizontal">
                            <Label
                                HorizontalOptions="Start"
                                Style="{StaticResource TxtHeadline6_1}"
                                Text="Top categories"
                                VerticalOptions="Center" />
                            <Label
                                HorizontalOptions="EndAndExpand"
                                Style="{StaticResource TxtSubTit1_1}"
                                Text="Show all"
                                VerticalOptions="Center" />
                        </StackLayout>

                        <CollectionView
                            HeightRequest="150"
                            ItemsSource="{Binding ListCategory}"
                            SelectionMode="Single">
                            <CollectionView.ItemsLayout>
                                <GridItemsLayout Orientation="Horizontal" />
                            </CollectionView.ItemsLayout>
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Frame
                                        Padding="7.5"
                                        BackgroundColor="{DynamicResource colBG1}"
                                        HasShadow="False"
                                        Visual="Material">
                                        <StackLayout Spacing="4">
                                            <Frame
                                                Margin="0,0,0,4"
                                                BackgroundColor="{DynamicResource colSurf2}"
                                                HeightRequest="88"
                                                Visual="Material"
                                                WidthRequest="88">
                                                <Label
                                                    FontFamily="{StaticResource CustomIconFont}"
                                                    FontSize="44"
                                                    HorizontalOptions="Center"
                                                    Text="{Binding Image_Category}"
                                                    TextColor="{Binding ImageColor_Category}"
                                                    VerticalOptions="Center" />
                                            </Frame>

                                            <Label
                                                Style="{StaticResource TxtTitle_1}"
                                                Text="{Binding Title_Category}" />

                                            <Label
                                                Style="{StaticResource TxtSubTit2_1}"
                                                Text="{Binding Place_Category}" />

                                        </StackLayout>
                                    </Frame>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </StackLayout>
                </Grid>
            </ScrollView>
        </Grid>
    </ContentPage.Content>
</ContentPage>